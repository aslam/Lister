<h1>Editing category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" } %>
  </p>
  <p>
    <%= f.label :lft %><br />
    <%= f.select :lft, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" } %>
  </p>
  <p>
    <%= f.label :rgt %><br />
    <%= f.select :rgt, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" } %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>

