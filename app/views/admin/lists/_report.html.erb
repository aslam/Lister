<table border="1">
    <tr>
        <th> Name </th>
        <th> URL  </th>
        <th> Description </th>
        <th> Category 1 - 1 </th>
        <th> Category 1 - 2 </th>
        <th> Category 1 - 3 </th>
        <th> Category 1 - 4 </th>
        <th> Category 2 - 1</th>
        <th> Category 2 - 2 </th>
        <th> Category 2 - 3 </th>
        <th> Category 2 - 4 </th>
        <th> Category 3 - 1</th>
        <th> Category 3 - 2 </th>
        <th> Category 3 - 3 </th>
        <th> Category 3 - 4 </th>
    </tr>
    <% @lists.each do |list| %>
        <tr>
            <td> <%= list.name %> </td>
            <td> <%= list.url %> </td>
            <td> <%= list.description %> </td>
            <% list.categories.each do |cat| %>
              <% cat.self_and_ancestors.each do |an| %>
                <td> <%= an.name %> </td>
              <% end %>
              <% if cat.self_and_ancestors.size < 4 %>
                <% 4-cat.self_and_ancestors.size.times do |i| %>
                  <td> - </td>
                <% end %>
              <% end %>
            <% end %>
        </tr>
    <% end %>
</table>

