<table class="list">
  <caption> <h1> Listing Users </h1> </caption>
  <col class="col1" />
  <col class="col2" />

  <thead>
    <tr>
      <th> Username </th>
      <th> No. lists Done </th>
      <th> No. lists Accepted </th>
      <th> No. lists Rejected </th>
      <th> &nbsp; </th>
    </tr>
  </thead>

  <tbody>
    <% for user in @users %>
    <tr>
      <td> <%= user.login %> </td>
      <td> <%= user.lists.size %> </td>
      <td> <%= user.lists.approved_count %> </td>
      <td> <%= user.lists.rejected_count %> </td>
      <td>
        <%= link_to "Edit", edit_admin_user_path(user) %> |
        <%= link_to "Delete", user, :confirm => "Are you sure?", :method => :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New User", new_admin_user_path %>

