<div style="width: 300px; margin: 0 auto;">
  <h1> Login </h1>

  <% form_for @admin_session, :url => admin_admin_session_path do |f| %>
      <%= f.error_messages %>
      <div>
          <%= f.label :login %> <br />
          <%= f.text_field :login %> <br />
          <br />
      </div>
      <div>
          <%= f.label :password %> <br />
          <%= f.password_field :password %> <br />
          <br />
      </div>
      <%= f.submit "Login" %>
  <% end %>
</div>

