<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Phone</th>
    <th>Fax</th>
    <th>List</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%=h address.location %></td>
    <td><%=h address.name %></td>
    <td><%=h address.email %></td>
    <td><%=h address.mobile %></td>
    <td><%=h address.phone %></td>
    <td><%=h address.fax %></td>
    <td><%=h address.list %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>